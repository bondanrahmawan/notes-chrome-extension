{
	"manifest_version": 3,
	"name": "Notes",
	"version": "1.0",
	"description": "A simple Notes Chrome extension",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "activeTab", "alarms", "notifications"]
}
